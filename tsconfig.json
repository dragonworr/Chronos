{
  "compilerOptions": {
    "target": "ES6",
    // "target": "es2019",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": false,
    "pretty": true,
    "outDir": "./build",
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "types": ["jest", "node", "@testing-library/jest-dom"],
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["./electron/**/*", "./electron/**/*.json", "jest.config.js"]
}
